(library
 (name tezos_shell_services)
 (public_name tezos-shell-services)
 (libraries tezos-base
            tezos-workers)
 (flags (:standard -linkall
                   -open Tezos_base__TzPervasives
                   -open Tezos_workers)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
