(library
 (name michelson_parser)
 (libraries tezos-base
            tezos-stdlib
            tezos-error-monad
            tezos-data-encoding
            tezos_alpha_test_helpers
            tezos-micheline)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_alpha_test_helpers)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
