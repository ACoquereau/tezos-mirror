;; -*- mode: dune; -*-

(include dune.inc)

(rule
 (targets "dune.inc.gen")
 (deps (glob_files %{workspace_root}/final_protocol_versions) TEZOS_PROTOCOL (glob_files *.ml) (glob_files *.mli))
 (action
  (run
    %{libexec:tezos-protocol-compiler:replace}
    %{libexec:tezos-protocol-compiler:dune_protocol.template}
    "dune.inc.gen"
    %{workspace_root}/final_protocol_versions)))

(alias
 (name   runtest_dune_template)
 (action (diff dune.inc dune.inc.gen)))
