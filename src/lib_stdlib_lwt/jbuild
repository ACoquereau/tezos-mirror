(jbuild_version 1)

(library
 ((name tezos_stdlib_lwt)
  (public_name tezos-stdlib-lwt)
  (flags (:standard -w -9-30
                    -open Tezos_base__TzPervasives
                    -safe-string))
  (libraries (tezos-base
              lwt.unix
              ipaddr.unix
              str))))

(alias
 ((name runtest_indent)
  (deps ((glob_files *.ml*)))
  (action (run bash ${libexec:tezos-stdlib:test-ocp-indent.sh} ${^}))))
