(library
 (name            lmdb)
 (public_name     tezos-lmdb)
 (libraries       rresult)
 (foreign_stubs
  (language c)
  (names mdb midl lmdb_stubs)
  (flags (:standard -Wstringop-overflow=0) (:include c_flags.sexp)))
  (c_library_flags -lpthread)
 )

(rule
 (targets c_flags.sexp)
 (action  (run %{exe:../config/discover.exe} -ocamlc %{ocamlc})))
