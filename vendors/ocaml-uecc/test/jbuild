(jbuild_version 1)

(executable
 ((name test)
  (modules (Test))
  (public_name test-uecc)
  (libraries (alcotest uecc))))

(executable
 ((name test_vectors)
  (modules (Vectors Test_vectors))
  (public_name test-uecc-vectors)
  (libraries (cstruct hex alcotest uecc))))

(alias
 ((name    runtest-uecc)
  (deps    (test.exe))
  (action  (run ${<}))))

(alias
 ((name    runtest-uecc-vectors)
  (deps    (test_vectors.exe))
  (action  (run ${<}))))

(alias
 ((name    runtest)
  (deps    ((alias runtest-uecc)
            (alias runtest-uecc-vectors)))))
